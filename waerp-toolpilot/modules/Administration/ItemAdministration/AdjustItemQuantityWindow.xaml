<Window x:Class="waerp_toolpilot.modules.Administration.ItemAdministration.AdjustItemQuantityWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:waerp_toolpilot.modules.Administration.ItemAdministration"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="RentSelectedItemView"
        Width="450"
        Height="300"
        AllowsTransparency="True"
        Background="Transparent"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        mc:Ignorable="d">
    <Grid>
        <Border Grid.RowSpan="3"
                Grid.ColumnSpan="2"
                BorderBrush="#444444"
                BorderThickness="8"
                CornerRadius="10"
                MouseLeftButtonDown="Border_MouseLeftButtonDown">
            <Rectangle Margin="0"
                       Fill="#EEEEEE" />
        </Border>
        <StackPanel VerticalAlignment="Center"
                    Orientation="Vertical">
            <TextBlock Margin="10"
                       VerticalAlignment="Center"
                       FontSize="24"
                       FontWeight="DemiBold"
                       Text="Bestand anpassen"
                       TextAlignment="Center"
                       TextWrapping="Wrap" />
            <StackPanel HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Orientation="Vertical">

                <TextBox x:Name="QuantityTotal"
                         Width="200"
                         MaxWidth="200"
                         Margin="20,0,20,20"
                         VerticalAlignment="Center"
                         materialDesign:HintAssist.Hint="Bestand"
                         AcceptsReturn="True"
                         IsEnabled="{Binding Path=IsChecked, ElementName=MaterialDesignFilledTextBoxEnabledComboBox}"
                         PreviewTextInput="NumberValidationTextBox"
                         Style="{StaticResource MaterialDesignFilledTextBox}"
                         Text="1"
                         TextWrapping="Wrap" />

                <TextBox x:Name="QuantityTotalNew"
                         Width="200"
                         MaxWidth="200"
                         Margin="20,0,20,0"
                         VerticalAlignment="Center"
                         materialDesign:HintAssist.Hint="Bestand NEU"
                         AcceptsReturn="True"
                         IsEnabled="{Binding Path=IsChecked, ElementName=MaterialDesignFilledTextBoxEnabledComboBox}"
                         PreviewTextInput="NumberValidationTextBox"
                         Style="{StaticResource MaterialDesignFilledTextBox}"
                         Text="1"
                         TextWrapping="Wrap" />
            </StackPanel>
            <StackPanel Grid.Row="1"
                        Margin="10"
                        HorizontalAlignment="Center"
                        Orientation="Horizontal">


                <Button Grid.Row="1"
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        Width="200"
                        Margin="0,30,10,0"
                        Click="CloseCurrentDialog"
                        Content="{DynamicResource cancleButton}"
                        Style="{StaticResource CancleButton}" />
                <Button Grid.Row="1"
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        Width="200"
                        Margin="10,30,0,0"
                        Click="SaveQuant"
                        Content="Speichern"
                        Style="{StaticResource NormalButton}" />
            </StackPanel>

        </StackPanel>
    </Grid>
</Window>
